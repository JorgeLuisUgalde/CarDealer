@using System.Globalization;
@using CarDealer.Models.ViewModels;
@model VehicleVM

<form method="get" enctype="multipart/form-data" asp-action="Details">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Details of Vehicle</h2>
        </div>

        <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
            <div class="card" style="width:18rem; height:18rem">
                <img class="card-img-top" style="height:160px;width:286px" src="~/@Model.Vehicle.PictureUrl">
                <div class="card-block">
                    <p class="card-title h5 text-primary"> @Model.Vehicle.Model.Make.Name @Model.Vehicle.Model.Name @Model.Vehicle.Year </p>
                    <p class="card-title text-info">@Model.Vehicle.Price.ToString("C", CultureInfo.GetCultureInfo("es-cr"))</p>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Vehicle.Description" class="p-0"></label>
            <div class="form-control" readonly>@Html.Raw(Model.Vehicle.Description)</div>
        </div>

    </div>
</form>


@section Scripts{

    <script src="https://cdn.tiny.cloud/1/15ppzj17t7o6klw3o2ryc501mp6jdbk1079w8wuxbsupg3u3/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
}