


@model List<Make>

   

<div class="container">

  

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                List of vehicle makes
            </h2>
        </div>
        <div class="col-6 text-end">
         @*   <a asp-controller="Make" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Create new make</a>*@
            <a asp-controller="Make" asp-action="Upsert" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Create new make</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th> Make</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var obj in Model.OrderBy(x => x.Name))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            @*<a asp-controller="Make" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>  Edit
                            </a>*@
                            <a asp-controller="Make" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>  Edit
                            </a>
                            <a asp-controller="Make" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>  Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


